{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "paths": {
      "@orcid/tokens": ["projects/orcid-tokens/src/public-api.ts"],
      "@orcid/ui": ["projects/orcid-ui/src/public-api.ts"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "typeRoots": ["node_modules/@types", "src/environments/interface.d.ts"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "useDefineForClassFields": false
  },

  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  },
  "references": [
    {
      "path": "./projects/orcid-ui/tsconfig.lib.json"
    },
    {
      "path": "./projects/orcid-ui/tsconfig.spec.json"
    },
    {
      "path": "./projects/orcid-tokens/tsconfig.lib.json"
    },
    {
      "path": "./projects/orcid-tokens/tsconfig.spec.json"
    },
    {
      "path": "./projects/orcid-ui-docs/tsconfig.app.json"
    },
    {
      "path": "./projects/orcid-ui-docs/tsconfig.spec.json"
    },
    {
      "path": "./projects/orcid-ui-elements/tsconfig.app.json"
    },
    {
      "path": "./projects/orcid-ui-elements/tsconfig.spec.json"
    }
  ]
}
